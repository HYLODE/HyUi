[
  {
    "selector": "node",
    "style": {
      "text-halign": "center",
      "text-valign": "center"
    }
  },
  {
    "selector": "[entity='bed']",
    "style": {
      "shape": "ellipse",
      "label": "data(bed_number)",
      "color": "white",
      "background-color": "blue"
    }
  },
  {
    "selector": "[entity='room']",
    "style": {
      "label": "data(label)",
      "background-opacity": 0,
      "border-width": 0
    }
  },
  {
    "selector": "[entity='department']",
    "style": {
      "label": "data(label)",
      "color": "black",
      "text-halign": "left",
      "text-margin-x": -5
    }
  },

  {
    "selector": "[?occupied]",
    "style": {
      "background-color": "red"
    }
  },
  {
    "selector": ":selected:",
    "style": {
      "background-color": "white",
      "border-color": "green",
      "border-width": 3,
      "color": "black"
    }
  }
]
