[
  {
    "selector": "node",
    "style": {
      "text-halign": "center",
      "text-valign": "center"
    }
  },
  {
    "selector": "[entity='bed']",
    "style": {
      "shape": "ellipse",
      "label": "data(bed_number)",
      "color": "white",
      "background-color": "green"
    }
  },
  {
    "selector": "[entity='room']",
    "style": {
      "label": "data(label)",
      "border-width": 1,
      "text-halign": "left",
      "text-valign": "top"
    }
  },
  {
    "selector": "[entity='department']",
    "style": {
      "label": "data(label)",
      "color": "black",
      "background-opacity": 0.1,
      "background-color": "gray",
      "border-color": "black",
      "border-width": 0,
      "text-halign": "left",
      "text-margin-x": -5
    }
  },
  {
    "selector": "[?closed]",
    "style": {
      "background-color": "white",
      "color": "gray"
    }
  },
  {
    "selector": "[?blocked]",
    "style": {
      "background-color": "gray"
    }
  },

  {
    "selector": "[?occupied]",
    "style": {
      "background-color": "teal"
    }
  },
  {
    "selector": ":selected:",
    "style": {
      "background-color": "orange",
      "background-opacity": 1,
      "border-color": "orange",
      "border-width": 0,
      "color": "black"
    }
  }
]
